<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="teste"
            type="br.com.pirlamps.yousetest.foundation.model.Child"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:elevation="8dp"
    android:layout_margin="10dp"


    >



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"

        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/newsimage1"
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:src="@drawable/ic_reddit"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/newsname"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:text="@{teste.data.author}"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/listsub1"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/time"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/listsub1"
                    app:showFormattedDate="@{teste.data.created}"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/more"
                    android:visibility="invisible"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>





            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    >

                    <TextView
                        android:id="@+id/news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{teste.data.title}"
                        android:lines="3"
                        android:textSize="17sp"
                        android:textColor="@color/listtext"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="3"
                        />


                    <TextView
                        android:id="@+id/intrest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{teste.data.subreddit}"
                        android:textSize="12sp"
                        android:textColor="@color/listsub2"
                        android:maxLines="1"
                        android:layout_marginTop="13dp"
                        />









                </LinearLayout>

                <LinearLayout
                    android:layout_weight="2.2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <ImageView

                        android:id="@+id/newsimage2"

                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:imageUrl="@{teste.data.preview.images.get(0).source.url}"
                        android:scaleType="fitXY"
                        />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>
</layout>